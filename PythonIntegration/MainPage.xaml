<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PythonIntegration.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button
                x:Name="navRat"
                Text="Classificar filmes"
                TextColor="Black"
                BackgroundColor="Transparent"
                HorizontalOptions="FillAndExpand"
                WidthRequest="200"
                HeightRequest="200"
                Clicked="navRat_Clicked">
                
            </Button>
            <Button
                x:Name="navRec"
                Text="Gerar recomendação"
                TextColor="Black"
                BackgroundColor="Transparent"
                HorizontalOptions="FillAndExpand"
                WidthRequest="200"
                HeightRequest="200"
                Clicked="navRec_Clicked">

            </Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
